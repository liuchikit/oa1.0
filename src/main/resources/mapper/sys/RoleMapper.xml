<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.liuchikit.mapper.sys.RoleMapper" >

    <delete id="unrelateRoleAllRightByRoleId" parameterType="java.lang.Long">
        DELETE FROM TB_ROLE_RIGHT
        WHERE ROLE_ID = #{roleId}
    </delete>

    <insert id="relateRights" parameterType="java.util.Map">
        INSERT INTO TB_ROLE_RIGHT(ROLE_ID,RIGHT_ID)
        VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (#{roleId},#{item})
        </foreach>
    </insert>

    <select id="queryUsersByRoleId" parameterType="java.util.Map" resultType="User">
        SELECT u.* FROM
        TB_USER u,TB_USER_ROLE ur,TB_ROLE r
        WHERE 1 = 1
        AND r.ID = #{roleId}
        AND ur.USER_ID = u.ID
        <if test="type != null and type == 1">
            AND ur.ROLE_ID = r.ID
        </if>
        <if test="type != null and type == 2">
            AND ur.ROLE_ID != r.ID
        </if>
    </select>

    <insert id="relateUsers" parameterType="java.util.Map">
        INSERT TB_USER_ROLE(ROLE_ID,USER_ID)
        VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (#{roleId},#{item})
        </foreach>
    </insert>

    <delete id="unrelateUsers" parameterType="java.util.Map">
        DELETE FROM TB_USER_ROLE ur
        WHERE ur.ROLE_ID = #{roleId}
        AND ur.USER_ID IN #{list}
    </delete>
</mapper>